rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }

    match /users/{uid} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() && (request.auth.uid == uid || request.auth.token.email == uid);
    }

    match /picks_user/{docId} {
      allow create: if isSignedIn()
        && (request.resource.data.user == request.auth.uid
            || request.resource.data.user == request.auth.token.email);
      allow read: if isSignedIn();
      allow update, delete: if false;
    }

    match /fixtures/{matchday}/items/{fixtureId} {
      allow read: if true;
      allow write: if false; // lo escribe Cloud Functions
    }

    match /picks_ai_explanations/{docId} {
      allow create, read: if isSignedIn();
      allow update, delete: if false;
    }
  }
}

